<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f3fe"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.screens.HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn1">

        <androidx.cardview.widget.CardView
            android:id="@+id/circleCard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="70dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_add" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E - imzo sdk"
            android:textColor="#B3000000"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E - imzo sdk"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn1"
        style="@style/button_style"
        android:drawableRight="@drawable/ic_folder_add"
        android:text="ERI qo'shish"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/btn2"
        style="@style/button_style"
        android:drawableRight="@drawable/ic_qr"
        android:text="QR orqali qo'shish"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/btn3"
        style="@style/button_style"
        android:drawableRight="@drawable/ic_nfc_2"
        android:text="NFC orqali qo'shish"
        android:textAllCaps="false"
        android:textColor="#B3000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>